@model IEnumerable<EMS_MVC_30121023.Models.Department.DepartmentModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2>Hello John From - Index View</h2>
        <span style="color:red">@TempData["Message"]</span>
        <br />
        <table>
            <thead>
                <tr>
                    <th>Department Id</th>
                    <th>Department Code</th>
                    <th>Department Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DepartmentId</td>
                            <td>@item.DepartmentCode</td>
                            <td>@item.DepartmentName</td>
                            <td>
                                @*<form method="post" action="Delete">
           @Html.Hidden("id",item.DepartmentId)
            <input type="submit" value="Remove" />
        </form>*@

                                @using (Html.BeginForm("Delete", "Department", new { id = item.DepartmentId }, FormMethod.Post))
                                {
                                    <input type="submit" value="Remove" />
                                }
                            </td>
                            @*<td>
                              @Html.ActionLink("Remove","Delete",new {id= item.DepartmentId })
                            </td>*@
                        </tr>
                    }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        There is no data!
                    </td>
                </tr>
            }
            </tbody>
        </table>

        @*@foreach (var item in Model)
            {
                <hr />
                <h3>
                    Department Id : @item.DepartmentId
                </h3>
                <h3>
                    Department Code : @item.DepartmentCode
                </h3>
                <h3>
                    Department Name : @item.DepartmentName
                </h3>
                <hr />
            }*@
    </div>
</body>
</html>
