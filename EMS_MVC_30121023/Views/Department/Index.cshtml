@model IEnumerable<EMS_MVC_30121023.Models.Department.DepartmentModel>

@*@{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@


<div>

    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })

    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Department Id</th>
                <th>Department Code</th>
                <th>Department Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartmentId</td>
                        <td>@item.DepartmentCode</td>
                        <td>@item.DepartmentName</td>
                        <td>
                            @*<form method="post" action="Delete">
                                   @Html.Hidden("id",item.DepartmentId)
                                    <input type="submit" value="Remove" />
                                </form>*@

                            @using (Html.BeginForm("Delete", "Department", new { id = item.DepartmentId }, FormMethod.Post))
                            {

                                <div class="btn-group" role="group">
                                    <input type="submit" value="Remove" class="btn btn-sm btn-danger" />
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId }, new { @class = "btn btn-sm btn-primary" })

                                </div>

                            }
                        </td>
                        @*<td>
                              @Html.ActionLink("Remove","Delete",new {id= item.DepartmentId })
                            </td>*@
                        <td>
                            @*<a href="/Department/Edit/@item.DepartmentId">Edit</a>*@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        There is no data!
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @*@foreach (var item in Model)
